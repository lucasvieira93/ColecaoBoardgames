<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/capaImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Nome"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/duracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Duração"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/jogadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Nº de Jogadores"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/dificuldade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Dificuldade"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/cooperativo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Cooperativo?"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/cartas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Cartas?"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="10dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec maximus ante et erat sagittis placerat. Ut id lacus nec erat eleifend facilisis quis vel nibh. Vivamus commodo enim ut ornare laoreet. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia curae; Duis sagittis felis at malesuada interdum. Maecenas faucibus velit eget leo luctus commodo. Ut arcu ipsum, vehicula et felis at, eleifend auctor nulla. Sed sit amet sem eu leo efficitur egestas. Maecenas eu metus et quam vulputate venenatis et ac velit. Praesent ut dui eget ex gravida sodales. Fusce ante sapien, dignissim eget facilisis vitae, interdum at diam. Aenean non neque orci. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos.  "
        android:textSize="14sp"
        android:textStyle="italic" />

</LinearLayout>
